<%- include('partials/header', { title: 'Contact GetYourTester' }) %>

<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h1 class="text-center mb-4">Contact Us</h1>
      <p class="lead text-center mb-5">Have questions about GetYourTester? We're here to help!</p>
      
      <div class="card shadow">
        <div class="card-body p-4 p-md-5">
          <form action="/contact" method="POST">
            <div class="row mb-3">
              <div class="col-md-6 mb-3 mb-md-0">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            
            <div class="form-check mb-4">
              <input class="form-check-input" type="checkbox" id="subscribe" name="subscribe">
              <label class="form-check-label" for="subscribe">
                Subscribe to our newsletter for product updates
              </label>
            </div>
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
            </div>
          </form>
        </div>
      </div>
      
      <div class="row mt-5">
        <div class="col-md-4 text-center mb-4 mb-md-0">
          <div class="d-inline-block p-3 bg-light rounded-circle mb-3">
            <i class="bi bi-envelope text-primary" style="font-size: 2rem;"></i>
          </div>
          <h3>Email</h3>
          <p>info@getyourtester.com</p>
        </div>
        <div class="col-md-4 text-center mb-4 mb-md-0">
          <div class="d-inline-block p-3 bg-light rounded-circle mb-3">
            <i class="bi bi-headset text-primary" style="font-size: 2rem;"></i>
          </div>
          <h3>Support</h3>
          <p>support@getyourtester.com</p>
        </div>
        <div class="col-md-4 text-center">
          <div class="d-inline-block p-3 bg-light rounded-circle mb-3">
            <i class="bi bi-github text-primary" style="font-size: 2rem;"></i>
          </div>
          <h3>GitHub</h3>
          <p>@GetYourTester</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 