<%- include('../partials/header', { title: 'Admin Dashboard' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-speedometer2 me-2"></i> Admin Dashboard</h1>
  <a href="/admin/logout" class="btn btn-outline-danger">
    <i class="bi bi-box-arrow-right me-1"></i> Logout
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-primary text-white">
    <h3 class="card-title mb-0">Test Requests</h3>
  </div>
  <div class="card-body">
    <% if (testRequests && testRequests.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Repo</th>
              <th>PR #</th>
              <th>Title</th>
              <th>Requested</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% testRequests.forEach(request => { %>
              <tr>
                <td><%= request.owner %>/<%= request.repo %></td>
                <td><%= request.prNumber %></td>
                <td><%= request.prTitle %></td>
                <td><%= new Date(request.requestedAt).toLocaleString() %></td>
                <td>
                  <span class="badge rounded-pill 
                    <% if (request.status === 'Pending') { %>bg-warning<% } %>
                    <% if (request.status === 'In Progress') { %>bg-info<% } %>
                    <% if (request.status === 'Complete-PASS') { %>bg-success<% } %>
                    <% if (request.status === 'Complete-FAIL') { %>bg-danger<% } %>
                  ">
                    <%= request.status %>
                  </span>
                </td>
                <td>
                  <a href="/admin/request/<%= request.id %>" class="btn btn-sm btn-primary">
                    <i class="bi bi-eye me-1"></i> View
                  </a>
                  <!-- Additional actions could go here -->
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i> No test requests found.
      </div>
    <% } %>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-4">
    <div class="card text-white bg-primary mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Pending</h5>
            <h2 class="mb-0">
              <%= testRequests.filter(r => r.status === 'Pending').length %>
            </h2>
          </div>
          <i class="bi bi-hourglass-split" style="font-size: 3rem; opacity: 0.5;"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-info mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">In Progress</h5>
            <h2 class="mb-0">
              <%= testRequests.filter(r => r.status === 'In Progress').length %>
            </h2>
          </div>
          <i class="bi bi-gear-wide-connected" style="font-size: 3rem; opacity: 0.5;"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-white bg-success mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Completed</h5>
            <h2 class="mb-0">
              <%= testRequests.filter(r => r.status === 'Complete-PASS' || r.status === 'Complete-FAIL').length %>
            </h2>
          </div>
          <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.5;"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 