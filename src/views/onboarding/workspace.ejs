<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Set up your workspace - FirstQA</title>
  <link rel="icon" type="image/svg+xml" href="/logos/firstqa-favicon.svg">
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/onboarding.css">
</head>
<body class="onboarding">
  <%- include('_nav') %>
  <main class="main">
    <div class="card">
      <h1>Set up your workspace</h1>
      <p class="subtitle">This helps Ovi understand your team's context.</p>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <form action="/onboarding/workspace" method="POST">
        <div class="form-group">
          <label for="company_name">Company name</label>
          <input type="text" id="company_name" name="company_name" 
            placeholder="Acme Inc" 
            value="<%= typeof companyName !== 'undefined' ? companyName : '' %>" 
            required autocomplete="organization">
        </div>
        <div class="form-group">
          <label for="team_size">Engineering team size</label>
          <div class="btn-group" role="group">
            <button type="button" class="btn-option <%= teamSize === '1-5' ? 'selected' : '' %>" data-value="1-5">1-5 engineers</button>
            <button type="button" class="btn-option <%= teamSize === '6-20' ? 'selected' : '' %>" data-value="6-20">6-20 engineers</button>
            <button type="button" class="btn-option <%= teamSize === '21-50' ? 'selected' : '' %>" data-value="21-50">21-50 engineers</button>
            <button type="button" class="btn-option <%= teamSize === '50+' ? 'selected' : '' %>" data-value="50+">50+ engineers</button>
          </div>
          <input type="hidden" name="team_size" id="team_size" value="<%= teamSize || '1-5' %>" required>
        </div>
        <button type="submit" class="btn-primary">Continue <i class="fas fa-arrow-right" style="font-size:0.85rem;"></i></button>
      </form>
    </div>
  </main>
  <script>
    document.querySelectorAll('.btn-option').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.btn-option').forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');
        document.getElementById('team_size').value = btn.dataset.value;
      });
    });
  </script>
</body>
</html>
