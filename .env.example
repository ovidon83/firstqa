# FirstQA Environment Configuration
# Copy to .env and fill in your actual values
# cp .env.example .env

# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000
SESSION_SECRET=your-session-secret-here

# GitHub App
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour private key here\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
STAGING_BRANCHES=staging,stage,develop

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Webhook (local dev)
WEBHOOK_PROXY_URL=https://your-domain.com/github/webhook

# Email / SMTP
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=hello@firstqa.dev
EMAIL_TO=hello@firstqa.dev
NOTIFICATION_EMAIL=hello@firstqa.dev

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Product knowledge / codebase indexing
ENABLE_KNOWLEDGE_SYNC=true
AUTO_INDEX_ON_INSTALL=true
INITIAL_ANALYSIS_BATCH_SIZE=50
FIRST_TIME_INDEX_REPO_CAP=5

# Jira OAuth
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret

# Linear OAuth
LINEAR_CLIENT_ID=your-linear-client-id
LINEAR_CLIENT_SECRET=your-linear-client-secret

# Bitbucket (optional)
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret
BITBUCKET_WEBHOOK_SECRET=your-bitbucket-webhook-secret

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Automated testing (optional)
TEST_AUTOMATION_ENABLED=false
TEST_AUTOMATION_BASE_URL=https://staging.yourdomain.com
TEST_AUTOMATION_TRIGGER_LABELS=
TEST_AUTOMATION_HEADLESS=true
TEST_AUTOMATION_SLOW_MO=100
TEST_AUTOMATION_TIMEOUT=30000
TEST_AUTOMATION_RECORD_VIDEO=true
TEST_AUTOMATION_SCREENSHOTS=true

# Branding
BRAND_NAME=FirstQA
BRAND_DOMAIN=firstqa.dev
BRAND_EMAIL=hello@firstqa.dev
SUPPORT_EMAIL=support@firstqa.dev

# Dev / debug
DEBUG=false
SKIP_WEBHOOK_VERIFICATION=false
WEBHOOK_TARGET_URL=http://localhost:3000/github/webhook
