    line-height: 1.1;
    letter-spacing: -2px;
    margin-bottom: 24px;
    color: var(--text-primary);
}

.highlight {
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-sub {
    font-size: 18px;
    color: var(--text-secondary);
    line-height: 1.75;
    margin-bottom: 32px;
    max-width: 520px;
    letter-spacing: 0.01em;
}

.hero-sub strong {
    color: var(--text-primary);
}

.hero-cta {
    display: flex;
    gap: 16px;
    margin-bottom: 48px;
}

.btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--gradient);
    color: var(--bg-dark);
    font-size: 15px;
    font-weight: 600;
    padding: 14px 28px;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 20px rgba(34, 211, 238, 0.25);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px var(--accent-glow);
}

.btn-primary i {
    font-size: 12px;
    transition: transform 0.3s;
}

.btn-primary:hover i {
    transform: translateX(4px);
}

.btn-primary.btn-large {
    font-size: 17px;
    padding: 18px 36px;
}

.btn-ghost {
    display: inline-flex;
    align-items: center;
    color: var(--text-secondary);
    font-size: 15px;
    font-weight: 500;
    padding: 14px 24px;
    text-decoration: none;
    transition: all 0.2s;
    border: 1px solid transparent;
    border-radius: 12px;
}

.btn-ghost:hover {
    color: var(--text-primary);
    border-color: var(--border);
    background: rgba(255, 255, 255, 0.03);
}

.hero-stats {
    display: flex;
    align-items: center;
    gap: 32px;
}

.stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.stat-value {
    font-size: 26px;
    font-weight: 700;
    color: var(--text-primary);
}

.stat-label {
    font-size: 11px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1.2px;
}

.stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border);
}

/* Terminal Visual */
.hero-visual {
    display: flex;
    justify-content: center;
}

.terminal {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    width: 100%;
    max-width: 540px;
    box-shadow: var(--shadow-card), 0 0 0 1px rgba(255, 255, 255, 0.03);
}

.terminal-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--bg-elevated);
    border-bottom: 1px solid var(--border);
}

.terminal-dots {
    display: flex;
    gap: 6px;
}

.terminal-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--border);
}

.terminal-dots span:nth-child(1) { background: #f87171; }
.terminal-dots span:nth-child(2) { background: #fbbf24; }
.terminal-dots span:nth-child(3) { background: #4ade80; }

.terminal-title {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-muted);
}

.terminal-body {
    padding: 24px;
    font-family: var(--font-mono);
    font-size: 13.5px;
}

.terminal-line {
    margin-bottom: 16px;
}

.prompt {
    color: var(--accent);
    margin-right: 8px;
}

.command {
    color: var(--text-primary);
}

.terminal-output {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.output-line {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--text-secondary);
    opacity: 0;
    animation: fadeIn 0.5s forwards;
}

.fade-in-1 { animation-delay: 0.5s; }
.fade-in-2 { animation-delay: 1.1s; }
.fade-in-3 { animation-delay: 1.7s; }
.fade-in-4 { animation-delay: 2.3s; }
.fade-in-5 { animation-delay: 2.9s; }
.fade-in-6 { animation-delay: 3.5s; }
.fade-in-7 { animation-delay: 4.1s; }

@keyframes fadeIn {
    to { opacity: 1; }
}

.output-line .icon {
    font-size: 15px;
}

.go-badge {
    display: inline-block;
    background: rgba(74, 222, 128, 0.15);
    color: var(--success);
    font-weight: 600;
    padding: 1px 8px;
    border-radius: 4px;
    font-size: 12px;
}

.output-line .success {
    color: var(--success);
    font-weight: 600;
}

.output-line .warning {
    color: var(--warning);
}

.output-line .link {
    color: var(--accent);
    text-decoration: underline;
    cursor: pointer;
}

/* ============================================
   Features / Pillars Section
   ============================================ */
.features {
    padding: 120px 0;
    background: var(--bg-card);
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
}

.section-header {
    text-align: center;
    margin-bottom: 64px;
}

.section-tag {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    color: var(--accent);
    margin-bottom: 16px;
    opacity: 0.95;
}

.section-header h2 {
    font-size: 42px;
    font-weight: 700;
    letter-spacing: -1px;
    margin-bottom: 16px;
    color: var(--text-primary);
}

.section-header p {
    font-size: 17px;
    color: var(--text-secondary);
    max-width: 640px;
    margin: 0 auto;
    line-height: 1.75;
}

.pillars-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.pillar-card {
    background: var(--bg-dark);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 32px 28px;
    position: relative;
    transition: all 0.3s;
    width: calc(33.333% - 14px);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
}

.pillar-card:hover {
    border-color: rgba(34, 211, 238, 0.5);
    transform: translateY(-4px);
    background: linear-gradient(180deg, rgba(34, 211, 238, 0.06) 0%, transparent 60%);
    box-shadow: 0 16px 48px rgba(34, 211, 238, 0.08), 0 0 0 1px rgba(34, 211, 238, 0.1);
}

.pillar-icon {
    width: 52px;
    height: 52px;
    background: var(--accent-glow);
    border: 1px solid rgba(34, 211, 238, 0.2);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
}

.pillar-icon i {
    font-size: 21px;
    color: var(--accent);
}

.pillar-card:hover .pillar-icon {
    background: rgba(34, 211, 238, 0.2);
    border-color: var(--accent);
}

.pillar-card h3 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 10px;
    color: var(--text-primary);
}

.pillar-card p {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.65;
}

/* ============================================
   How It Works
   ============================================ */
.how-it-works {
    padding: 120px 0;
}

.steps-container {
    max-width: 600px;
    margin: 0 auto;
}

.step {
    display: flex;
    gap: 24px;
    align-items: flex-start;
}

.step-number {
    width: 48px;
    height: 48px;
    background: var(--gradient);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 700;
    color: var(--bg-dark);
    flex-shrink: 0;
}

.step-content h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.step-content p {
    font-size: 15px;
    color: var(--text-secondary);
    line-height: 1.6;
}

.step-tools {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
}

.tool-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    padding: 8px 14px;
    border-radius: 10px;
    font-size: 12px;
    color: var(--text-secondary);
}

.tool-badge:hover {
    color: var(--text-primary);
    border-color: var(--text-muted);
}

.step-connector {
    display: flex;
    justify-content: center;
    padding: 0 24px;
    margin-left: 24px;
    color: var(--border);
}

.step-connector svg {
    width: 24px;
    height: 60px;
}

.section-cta {
    text-align: center;
    margin-top: 64px;
}

/* ============================================
   Why Section
   ============================================ */
.why-section {
    padding: 120px 0;
    background: var(--bg-card);
    border-top: 1px solid var(--border);
}

.why-section .section-header p {
    max-width: 560px;
}

.runway-math {
    max-width: 640px;
    margin: 0 auto 48px;
    padding: 28px 32px;
    background: var(--bg-dark);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--danger);
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.2);
}

.runway-math-intro {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
}

.runway-math-statement {
    font-size: 17px;
    color: var(--text-primary);
    line-height: 1.7;
    margin: 0;
}

.runway-highlight {
    display: inline;
    color: var(--accent);
    font-weight: 700;
    padding: 0 6px;
    background: rgba(34, 211, 238, 0.12);
    border-radius: 6px;
}

.bug-costs {
    max-width: 560px;
    margin: 0 auto 48px;
}

.bug-costs-intro {
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 16px;
}

.bug-costs-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.bug-costs-list li {
    position: relative;
    padding-left: 24px;
    margin-bottom: 10px;
    font-size: 15px;
    color: var(--text-secondary);
    line-height: 1.6;
}

.bug-costs-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10px;
    width: 6px;
    height: 6px;
    background: var(--text-muted);
    border-radius: 50%;
}

.why-ovi-job {
    text-align: center;
    max-width: 580px;
    margin: 0 auto 56px;
}

.why-ovi-job p {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.75;
    margin-bottom: 12px;
}

.why-ovi-job p strong {
    color: var(--text-primary);
}

.ovi-job-tag {
    font-size: 18px !important;
    margin-top: 20px !important;
    margin-bottom: 0 !important;
}

.ovi-job-tag strong {
    color: var(--accent);
}

.process-compare {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    max-width: 900px;
    margin: 0 auto;
}

.process-column {
    padding: 32px 28px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    background: var(--bg-dark);
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.15);
}

.process-column h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
}

.process-current h3 {
    color: var(--text-primary);
}

.process-ovi h3 {
    color: var(--accent);
    border-bottom-color: rgba(34, 211, 238, 0.25);
}

.process-current {
    border-color: rgba(248, 113, 113, 0.2);
}

.process-ovi {
    border-color: rgba(34, 211, 238, 0.25);
    background: linear-gradient(180deg, rgba(34, 211, 238, 0.04) 0%, transparent 40%);
}

.process-steps {
    list-style: none;
    padding: 0;
    margin: 0;
    counter-reset: step;
}

.process-steps li {
    position: relative;
    padding-left: 32px;
    margin-bottom: 14px;
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.55;
    counter-increment: step;
}

.process-steps li::before {
    content: counter(step);
    position: absolute;
    left: 0;
    top: 0;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    font-size: 11px;
    font-weight: 600;
    line-height: 22px;
    text-align: center;
    font-family: var(--font-main);
}

.process-current .process-steps li::before {
    background: rgba(248, 113, 113, 0.15);
    color: var(--danger);
}

.process-ovi .process-steps li::before {
    background: var(--accent-glow);
    color: var(--accent);
}

.process-steps li:last-child {
    margin-bottom: 0;
}

/* ============================================
   Human QA Section
   ============================================ */
.human-qa {
    padding: 80px 0;
    border-top: 1px solid var(--border);
}

.human-qa-card {
    display: flex;
    align-items: flex-start;
    gap: 40px;
    max-width: 800px;
    margin: 0 auto;
    background: var(--bg-dark);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: 48px;
    box-shadow: var(--shadow-card), 0 0 0 1px rgba(255, 255, 255, 0.02);
}

.human-qa-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.1) 0%, rgba(251, 146, 60, 0.1) 100%);
    border: 1px solid rgba(251, 191, 36, 0.3);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.human-qa-icon i {
    font-size: 24px;
    color: #fbbf24;
}

.human-qa-tag {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #fbbf24;
    margin-bottom: 12px;
}

.human-qa-content h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
}

.human-qa-content > p {
    font-size: 15px;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 20px;
}

.human-qa-list {
    list-style: none;
    margin-bottom: 24px;
}

.human-qa-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 10px;
}

.human-qa-list li i {
    color: #fbbf24;
    font-size: 12px;
}

.btn-human-qa {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: transparent;
    border: 1px solid rgba(251, 191, 36, 0.4);
    color: #fbbf24;
    font-size: 14px;
    font-weight: 600;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s;
}

.btn-human-qa:hover {
    background: rgba(251, 191, 36, 0.1);
    border-color: #fbbf24;
    transform: translateY(-2px);
}

.btn-human-qa i {
    font-size: 12px;
    transition: transform 0.3s;
}

.btn-human-qa:hover i {
    transform: translateX(4px);
}

/* ============================================
   Bottom CTA Section
   ============================================ */
.bottom-cta {
    padding: 120px 0;
    position: relative;
    text-align: center;
}

.bottom-cta::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 400px;
    background: var(--accent);
    filter: blur(200px);
    opacity: 0.06;
    pointer-events: none;
    border-radius: 50%;
}

.bottom-cta-content {
    position: relative;
    z-index: 1;
}

.bottom-cta h2 {
    font-size: 36px;
    font-weight: 700;
    letter-spacing: -1px;
    margin-bottom: 16px;
    color: var(--text-primary);
}

.bottom-cta p {
    font-size: 17px;
    color: var(--text-secondary);
    margin-bottom: 32px;
}

/* ============================================
   Shared Form Styles (used in modal)
   ============================================ */
.ea-form {
    max-width: 420px;
    margin: 0 auto 24px;
}

.ea-input-group {
    display: flex;
    gap: 12px;
}

.ea-input-group input {
    flex: 1;
    background: var(--bg-dark);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 14px 18px;
    font-size: 15px;
    color: var(--text-primary);
    font-family: var(--font-main);
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
}

.ea-input-group input::placeholder {
    color: var(--text-muted);
}

.ea-input-group input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px var(--accent-glow);
}

.btn-submit {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--gradient);
    color: var(--bg-dark);
    font-size: 15px;
    font-weight: 600;
    padding: 14px 28px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
    box-shadow: 0 4px 20px rgba(34, 211, 238, 0.25);
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px var(--accent-glow);
}

.ea-message {
    font-size: 14px;
    margin-top: 12px;
    min-height: 20px;
}

.ea-message.success {
    color: var(--success);
}

.ea-message.error {
    color: var(--danger);
}

.ea-demo-link {
    font-size: 14px;
    color: var(--text-muted);
}

.ea-demo-link a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
}

.ea-demo-link a:hover {
    color: var(--text-primary);
}

/* ============================================
   Footer
   ============================================ */
.footer {
    padding: 64px 0 32px;
    background: var(--bg-card);
    border-top: 1px solid var(--border);
}

.footer-main {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 64px;
    margin-bottom: 48px;
}

.footer-brand {
    max-width: 300px;
}

.footer-brand .logo {
    margin-bottom: 16px;
}

.footer-brand p {
    font-size: 14px;
    color: var(--text-muted);
    line-height: 1.6;
}

.footer-links {
    display: flex;
    gap: 64px;
}

.footer-col h4 {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text-secondary);
    margin-bottom: 16px;
}

.footer-col a {
    display: block;
    font-size: 14px;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 12px;
    transition: color 0.2s;
}

.footer-col a:hover {
    color: var(--text-primary);
}

.footer-bottom {
    padding-top: 32px;
    border-top: 1px solid var(--border);
    text-align: center;
}

.footer-bottom p {
    font-size: 13px;
    color: var(--text-muted);
}

/* ============================================
   Responsive
   ============================================ */
@media (max-width: 1024px) {
    .hero .container {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .hero-sub {
        max-width: 600px;
    }
    
    .hero-cta {
        justify-content: center;
    }
    
    .hero-stats {
        justify-content: center;
    }
    
    .hero-visual {
        order: -1;
        margin-bottom: 40px;
    }
    
    .terminal {
        max-width: 480px;
    }
    
    .pillar-card {
        width: calc(50% - 10px);
    }
    
    .process-compare {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        display: none;
    }
    
    .mobile-menu-btn {
        display: flex;
    }
    
    .hero h1 {
        font-size: 40px;
        letter-spacing: -1px;
    }
    
    .hero h1 br {
        display: none;
    }
    
    .section-header h2 {
        font-size: 32px;
    }
    
    .pillar-card {
        width: calc(50% - 10px);
    }
    
    .hero-stats {
        flex-wrap: wrap;
        gap: 24px;
    }
    
    .stat-divider {
        display: none;
    }

    .process-compare {
        grid-template-columns: 1fr;
    }
    
    .footer-main {
        grid-template-columns: 1fr;
        gap: 48px;
    }
    
    .footer-links {
        gap: 32px;
        flex-wrap: wrap;
    }
    
    .ea-input-group {
        flex-direction: column;
    }
    
    .human-qa-card {
        flex-direction: column;
        padding: 32px 24px;
        text-align: center;
    }
    
    .human-qa-icon {
        margin: 0 auto;
    }
    
    .human-qa-list li {
        justify-content: center;
    }
    
    .human-qa-content h3 {
        font-size: 22px;
    }

}

@media (max-width: 480px) {
    .hero {
        padding: 100px 0 60px;
    }
    
    .hero h1 {
        font-size: 32px;
    }
    
    .hero-sub {
