}

/* How Ovi Works */
.ovi-section {
    padding: 80px 0;
    background: #fafbfc;
}

.ovi-intro {
    display: flex;
    align-items: center;
    gap: 60px;
    margin-bottom: 60px;
}

.ovi-intro-content {
    flex: 1;
}

.ovi-intro-content h2 {
    font-size: 32px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 16px;
}

.ovi-intro-content p {
    font-size: 17px;
    color: #4b5563;
    line-height: 1.7;
}

.ovi-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
