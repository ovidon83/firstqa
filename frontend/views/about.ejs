    background: white;
}

.mission-card {
    background: #f9fafb;
    border-radius: 16px;
    padding: 48px;
    text-align: center;
}

.mission-card h2 {
    font-size: 28px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 20px;
}

.mission-card p {
