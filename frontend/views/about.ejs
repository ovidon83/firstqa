    padding: 8px 16px;
    border-radius: 24px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 16px;
}

.workflow-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
}

.workflow-card {
    background: white;
    border-radius: 16px;
    padding: 32px;
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
}

.workflow-card:hover {
    border-color: #0d9488;
    box-shadow: 0 8px 30px rgba(13, 148, 136, 0.1);
}

.workflow-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #0d9488 0%, #059669 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: white;
    margin-bottom: 20px;
}

.workflow-card h3 {
    font-size: 18px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 12px;
}

.workflow-card p {
    font-size: 15px;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 16px;
}

.workflow-features {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.workflow-feature {
    font-size: 12px;
    color: #0d9488;
    background: rgba(13, 148, 136, 0.08);
    padding: 4px 10px;
    border-radius: 12px;
}

/* Story Section */
.story-section {
    padding: 80px 0;
    background: white;
}

.story-card {
    background: linear-gradient(135deg, #f0fdfa 0%, #f9fafb 100%);
    border-radius: 20px;
    padding: 56px;
    border: 1px solid rgba(13, 148, 136, 0.1);
}

.story-card h2 {
    font-size: 28px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 32px;
    text-align: center;
}

.story-item {
    margin-bottom: 32px;
    padding-left: 32px;
    position: relative;
}

.story-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 6px;
    width: 12px;
    height: 12px;
    background: #0d9488;
    border-radius: 50%;
}

.story-item::after {
    content: '';
    position: absolute;
    left: 5px;
    top: 22px;
    width: 2px;
    height: calc(100% + 12px);
    background: #e5e7eb;
}

.story-item:last-child::after {
    display: none;
}

.story-item h4 {
    font-size: 18px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 8px;
}

.story-item p {
    font-size: 15px;
    color: #4b5563;
    line-height: 1.7;
    margin: 0;
}

/* Who We Help */
.audience-section {
    padding: 80px 0;
    background: #fafbfc;
}

.audience-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
}

.audience-card {
    background: white;
    border-radius: 16px;
    padding: 40px;
    border: 1px solid #e5e7eb;
}

.audience-card h3 {
    font-size: 22px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 12px;
}

.audience-card > p {
    font-size: 15px;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 20px;
}

.audience-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.audience-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #374151;
    margin-bottom: 10px;
}

.audience-list li i {
    color: #0d9488;
    font-size: 12px;
}

/* CTA */
.cta-section {
    padding: 80px 0;
    background: white;
}

.cta-card {
    background: linear-gradient(135deg, #0d9488 0%, #059669 100%);
    border-radius: 20px;
    padding: 64px 48px;
    text-align: center;
    color: white;
}

.cta-card h2 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 16px;
    color: white;
}

.cta-card p {
    font-size: 18px;
    margin-bottom: 32px;
    opacity: 0.95;
}

.btn-white {
    background: white;
    color: #0d9488;
    padding: 16px 36px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s;
}

.btn-white:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    color: #0d9488;
    text-decoration: none;
}

/* Responsive */
@media (max-width: 992px) {
    .workflow-grid {
        grid-template-columns: 1fr;
    }
    
    .audience-grid {
        grid-template-columns: 1fr;
    }
    
    .ovi-intro {
        flex-direction: column;
        text-align: center;
    }
}

@media (max-width: 768px) {
    .about-hero h1 {
        font-size: 36px;
    }
    
