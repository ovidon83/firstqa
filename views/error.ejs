<div class="error-container">
  <h2>Error: <%= message %></h2>
  <% if (error.status) { %>
    <p>Status: <%= error.status %></p>
  <% } %>
  
  <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
    <div class="error-details">
      <h3>Stack Trace:</h3>
      <pre><%= error.stack %></pre>
    </div>
  <% } %>
  
  <a href="/" class="btn btn-primary">Return to Homepage</a>
</div> 