<%- include('partials/header') %>

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="display-6 fw-bold">Dashboard</h1>
      <p class="text-muted">Welcome back, <%= user.name %></p>
    </div>
    <div class="col-md-4 text-md-end">
      <div class="btn-group">
        <% if (user.role === 'developer') { %>
          <a href="#" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Test Request
          </a>
        <% } else if (user.role === 'tester') { %>
          <a href="#" class="btn btn-primary">
            <i class="bi bi-search me-2"></i>Browse Requests
          </a>
        <% } else if (user.role === 'admin') { %>
          <a href="/dashboard/admin" class="btn btn-primary">
            <i class="bi bi-gear me-2"></i>Admin Panel
          </a>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Stats Cards -->
  <div class="row mb-4">
    <div class="col-md-4 mb-4 mb-md-0">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-2">Pending Requests</h6>
              <h2 class="mb-0"><%= pendingRequests ? pendingRequests.length : 0 %></h2>
            </div>
            <div class="bg-warning bg-opacity-10 p-3 rounded">
              <i class="bi bi-hourglass text-warning fs-3"></i>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light py-2">
          <a href="#" class="text-decoration-none small">View all pending</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-4 mb-md-0">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-2">In Progress</h6>
              <h2 class="mb-0"><%= inProgressRequests ? inProgressRequests.length : 0 %></h2>
            </div>
            <div class="bg-primary bg-opacity-10 p-3 rounded">
              <i class="bi bi-gear-wide-connected text-primary fs-3"></i>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light py-2">
          <a href="#" class="text-decoration-none small">View in progress</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-2">Completed</h6>
              <h2 class="mb-0"><%= completedRequests ? completedRequests.length : 0 %></h2>
            </div>
            <div class="bg-success bg-opacity-10 p-3 rounded">
              <i class="bi bi-check-circle text-success fs-3"></i>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light py-2">
          <a href="#" class="text-decoration-none small">View completed</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0">Recent Activity</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th>Request</th>
              <th>Status</th>
              <th>Tester</th>
              <th>Last Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (requests && requests.length > 0) { %>
              <% requests.slice(0, 5).forEach(request => { %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="me-3">
                        <div class="bg-light p-2 rounded">
                          <i class="bi bi-code-square text-primary"></i>
                        </div>
                      </div>
                      <div>
                        <h6 class="mb-0">Test Request #<%= request.id ? request.id.substring(0, 8) : 'N/A' %></h6>
                        <small class="text-muted"><%= request.title || 'Untitled Request' %></small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <% if (request.status === 'pending') { %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% } else if (request.status === 'in_progress') { %>
                      <span class="badge bg-primary">In Progress</span>
                    <% } else if (request.status === 'completed' || request.status === 'pass' || request.status === 'fail') { %>
                      <span class="badge bg-success">Completed</span>
                    <% } else { %>
                      <span class="badge bg-secondary">Unknown</span>
                    <% } %>
                  </td>
                  <td>
                    <%= request.testerName || 'Not Assigned' %>
                  </td>
                  <td>
                    <small><%= request.updatedAt ? new Date(request.updatedAt).toLocaleDateString() : 'N/A' %></small>
                  </td>
                  <td>
                    <a href="/request/<%= request.id %>" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-eye"></i>
                    </a>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center py-4">
                  <div class="py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-3 text-muted"></i>
                    <h5>No requests found</h5>
                    <p class="text-muted mb-0">You don't have any test requests yet.</p>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 