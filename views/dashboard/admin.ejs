<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="display-6 fw-bold">Admin Dashboard</h1>
      <p class="text-muted">Manage users, applications, and test requests</p>
    </div>
    <div class="col-md-4 text-md-end">
      <a href="/dashboard" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
      </a>
    </div>
  </div>
  
  <!-- Admin Cards -->
  <div class="row mb-4">
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body text-center">
          <div class="display-1 text-primary">
            <i class="bi bi-people"></i>
          </div>
          <h4 class="mt-3">Users</h4>
          <p class="text-muted">Manage user accounts</p>
        </div>
        <div class="card-footer bg-light text-center">
          <a href="#" class="btn btn-sm btn-primary">Manage Users</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body text-center">
          <div class="display-1 text-success">
            <i class="bi bi-person-badge"></i>
          </div>
          <h4 class="mt-3">Applications</h4>
          <p class="text-muted">Review tester applications</p>
        </div>
        <div class="card-footer bg-light text-center">
          <a href="#" class="btn btn-sm btn-primary">View Applications</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body text-center">
          <div class="display-1 text-warning">
            <i class="bi bi-clipboard-check"></i>
          </div>
          <h4 class="mt-3">Requests</h4>
          <p class="text-muted">Manage test requests</p>
        </div>
        <div class="card-footer bg-light text-center">
          <a href="#" class="btn btn-sm btn-primary">View Requests</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card shadow-sm h-100 dashboard-card">
        <div class="card-body text-center">
          <div class="display-1 text-info">
            <i class="bi bi-gear"></i>
          </div>
          <h4 class="mt-3">Settings</h4>
          <p class="text-muted">System configuration</p>
        </div>
        <div class="card-footer bg-light text-center">
          <a href="#" class="btn btn-sm btn-primary">View Settings</a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0">Recent System Activity</h5>
    </div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-person-plus me-2 text-success"></i>
            <strong>New user registered:</strong> john.doe@example.com
          </div>
          <span class="text-muted small">5 minutes ago</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-file-earmark-plus me-2 text-primary"></i>
            <strong>New test request submitted:</strong> Web App Testing
          </div>
          <span class="text-muted small">30 minutes ago</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-person-badge me-2 text-warning"></i>
            <strong>New tester application received:</strong> sarah.smith@example.com
          </div>
          <span class="text-muted small">2 hours ago</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-check-circle me-2 text-success"></i>
            <strong>Test request completed:</strong> Mobile App Testing
          </div>
          <span class="text-muted small">6 hours ago</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-person-check me-2 text-info"></i>
            <strong>Tester application approved:</strong> michael.brown@example.com
          </div>
          <span class="text-muted small">1 day ago</span>
        </li>
      </ul>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 