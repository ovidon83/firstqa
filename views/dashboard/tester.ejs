<%- include('../partials/header') %>

<div class="container py-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="display-6 fw-bold">Tester Dashboard</h1>
      <p class="text-muted">Manage your testing assignments and reports</p>
    </div>
    <div class="col-md-4 text-md-end">
      <a href="/dashboard" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
      </a>
    </div>
  </div>

  <!-- Tester Stats -->
  <div class="row mb-4">
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm dashboard-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="text-primary" style="font-size: 2.5rem;">
              <i class="bi bi-clipboard-check"></i>
            </div>
            <div class="ms-3">
              <h5 class="mb-0">Assignments</h5>
              <div class="display-6 fw-bold">3</div>
              <p class="text-muted mb-0">Active test assignments</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm dashboard-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="text-success" style="font-size: 2.5rem;">
              <i class="bi bi-check-circle"></i>
            </div>
            <div class="ms-3">
              <h5 class="mb-0">Completed</h5>
              <div class="display-6 fw-bold">12</div>
              <p class="text-muted mb-0">Completed assignments</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm dashboard-card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="text-warning" style="font-size: 2.5rem;">
              <i class="bi bi-star"></i>
            </div>
            <div class="ms-3">
              <h5 class="mb-0">Rating</h5>
              <div class="display-6 fw-bold">4.8/5</div>
              <p class="text-muted mb-0">Average developer rating</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Current Assignments -->
